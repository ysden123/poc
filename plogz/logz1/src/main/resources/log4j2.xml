<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5p %class.%M(%line) - %msg%n" />
        </Console>
        <File name="File" fileName="logs/logz1.log" append="false">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5p %class.%M(%line) - %msg%n" />
        </File>
        <LogzioAppender name="Logzio">
            <logzioToken>$LOGZTOKEN</logzioToken>
            <logzioType>java</logzioType>
            <logzioUrl>https://listener.logz.io:8071</logzioUrl>
            <debug>false</debug>
            <additionalFields>server=YSTEST;version=test</additionalFields>
        </LogzioAppender>
    </Appenders>
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="Console" />
            <AppenderRef ref="File" />
            <AppenderRef ref="Logzio"/>
        </Root>
        <Logger name="io.logz" level="error"/>
    </Loggers>
</Configuration>
